{
  "manifest_version": 3,
  "name": "Briefly",
  "icons": {
    "16": "icons/briefly-16.png",
    "48": "icons/briefly-48.png",
    "128": "icons/briefly-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/briefly-16.png",
      "48": "icons/briefly-48.png",
      "128": "icons/briefly-128.png"
    },
    "default_title": "Briefly â€” Instant YouTube Summaries",
    "default_popup": "popup.html"
  },
  "version": "1.4",
  "description": "Adds context menu items for YouTube video links to process transcripts and attempts to automate AI Studio using a JS library.",
  "permissions": [
    "contextMenus",
    "tabs",
    "clipboardWrite",
    "offscreen",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
     "*://*.youtube.com/*",
     "*://youtu.be/*",
     "*://aistudio.google.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}