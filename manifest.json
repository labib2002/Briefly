{
  "manifest_version": 3,
  "name": "Briefly",
  "icons": {
    "16": "icons/briefly-16.png",
    "48": "icons/briefly-48.png",
    "128": "icons/briefly-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/briefly-16.png",
      "48": "icons/briefly-48.png",
      "128": "icons/briefly-128.png"
    },
    "default_title": "Briefly â€” Instant YouTube Summaries",
    "default_popup": "popup.html"
  },

  "version": "1.3",
  "description": "Adds context menu items for YouTube video links to process transcripts via local API and attempts to automate AI Studio.",
  "permissions": [
    "contextMenus",
    "tabs",
    "clipboardWrite",
    "offscreen",
    "notifications",
    "scripting"
  ],
  "host_permissions": [
     "*://*.youtube.com/*",
     "http://127.0.0.1/*",
     "*://aistudio.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}