{
  "manifest_version": 3,
  "name": "Briefly",
  "version": "1.5.0",
  "description": "Instant YouTube transcripts & summaries. Copies transcripts and can summarize in Google AI Studio.",
  "icons": {
    "16": "icons/briefly-16.png",
    "48": "icons/briefly-48.png",
    "128": "icons/briefly-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/briefly-16.png",
      "48": "icons/briefly-48.png",
      "128": "icons/briefly-128.png"
    },
    "default_title": "Briefly â€” Instant YouTube Summaries",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "clipboardWrite",
    "notifications",
    "offscreen",
    "identity",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://youtu.be/*",
    "https://aistudio.google.com/*",
    "https://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/youtube.force-ssl"
    ]
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}